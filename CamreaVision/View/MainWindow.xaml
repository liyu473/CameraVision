<Window
    x:Class="CamreaVision.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CamreaVision.View"
    xmlns:lyu="http://schemas.lyuwpfhelper.com/winfx/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:viewmodel="clr-namespace:CamreaVision.ViewModel"
    Title="MainWindow"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type=viewmodel:MainViewModel}"
    ui:TitleBar.Height="36"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    mc:Ignorable="d">
    <Grid>
        <TabControl
            ui:TabControlHelper.ContentBackground="Transparent"
            ui:TabControlHelper.IsAddTabButtonVisible="False"
            Style="{StaticResource TabControlPivotStyle}">
            <TabItem ui:TabItemHelper.IsClosable="False" Header="MindVision">
                <Grid lyu:GridHelper.RowDefinitions="Auto,*,2*">
                    <lyu:SimpleStackPanel
                        Grid.Row="0"
                        Margin="10,8"
                        Orientation="Horizontal"
                        Spacing="24">
                        <Button Command="{Binding ScanCameraCommand}" Content="扫描相机" />
                        <Button Command="{Binding OpenCameraCommand}" Content="打开相机" />
                    </lyu:SimpleStackPanel>

                    <DataGrid
                        Grid.Row="1"
                        lyu:DataGridRowNumberBehavior.HeaderText="序号"
                        lyu:DataGridRowNumberBehavior.IsEnabled="True"
                        AutoGenerateColumns="True"
                        Background="Transparent"
                        CanUserAddRows="False"
                        CanUserSortColumns="False"
                        ColumnWidth="Auto"
                        GridLinesVisibility="All"
                        HeadersVisibility="Column"
                        IsReadOnly="True"
                        ItemsSource="{Binding Cameras}"
                        SelectedItem="{Binding SelectedCamera}">
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
